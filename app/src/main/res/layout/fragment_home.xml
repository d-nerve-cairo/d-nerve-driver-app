<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_welcome"
            android:textAppearance="@style/TextAppearance.DNerve.H2"
            android:layout_marginBottom="8dp" />

        <!-- Points Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Points Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_stars"
                    app:tint="@color/accent" />

                <!-- Points Value -->
                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_points_label"
                    android:textAppearance="@style/TextAppearance.DNerve.Body2" />

                <!-- Tier Badge -->
                <TextView
                    android:id="@+id/tv_tier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bronze Driver"
                    android:textColor="@color/tier_bronze"
                    android:textStyle="bold" />

                <!-- Progress to Next Tier -->
                <ProgressBar
                    android:id="@+id/progress_tier"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:max="1000"
                    android:progress="450"
                    android:progressTint="@color/tier_bronze"
                    android:progressBackgroundTint="@color/divider" />

                <TextView
                    android:id="@+id/tv_tier_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="450 / 1000 to Silver"
                    android:textAppearance="@style/TextAppearance.DNerve.Caption" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Today's Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_today_stats"
                    android:textAppearance="@style/TextAppearance.DNerve.H4"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Trips -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_directions_bus"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/tv_trips_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_trips"
                            android:textAppearance="@style/TextAppearance.DNerve.Caption" />
                    </LinearLayout>

                    <!-- Quality -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_verified"
                            app:tint="@color/success" />

                        <TextView
                            android:id="@+id/tv_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="92%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_quality"
                            android:textAppearance="@style/TextAppearance.DNerve.Caption" />
                    </LinearLayout>

                    <!-- Streak -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_local_fire_department"
                            app:tint="@color/accent" />

                        <TextView
                            android:id="@+id/tv_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_streak"
                            android:textAppearance="@style/TextAppearance.DNerve.Caption" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Start Trip Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_trip"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/trip_start"
            android:textSize="16sp"
            app:icon="@drawable/ic_play_circle"
            app:iconGravity="textStart"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/primary" />

    </LinearLayout>
</ScrollView>