<?xml version="1.0" encoding="utf-8"?>
<!-- D-Nerve Driver App - Dark Theme -->
<resources>
    <!-- Base App Theme - Dark (same parent, colors from values-night/colors.xml) -->
    <style name="Theme.DNerveDriver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>

        <!-- Secondary/Accent Colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- On Colors -->
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- System Bars - Dark -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/surface</item>

        <!-- Default Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Splash Screen Theme - Dark -->
    <style name="Theme.DNerveDriver.Splash" parent="Theme.DNerveDriver">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>