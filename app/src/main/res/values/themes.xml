<?xml version="1.0" encoding="utf-8"?>
<!-- D-Nerve Driver App - themes.xml -->
<!-- Location: app/src/main/res/values/themes.xml -->
<resources>
    <!-- Base App Theme -->
    <style name="Theme.DNerveDriver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        
        <!-- Secondary/Accent Colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- On Colors (text/icons on top of themed surfaces) -->
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- System Bars -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Default Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.DNerve.Button</item>
        
        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.DNerve.CardView</item>
        
        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.DNerve.BottomNavigation</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.DNerveDriver.Splash" parent="Theme.DNerveDriver">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
    
    <!-- ==================== WIDGET STYLES ==================== -->
    
    <!-- Primary Button -->
    <style name="Widget.DNerve.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">@dimen/radius_pill</item>
        <item name="android:minHeight">@dimen/button_height_md</item>
    </style>
    
    <!-- Outlined Button -->
    <style name="Widget.DNerve.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="cornerRadius">@dimen/radius_pill</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <!-- Text Button -->
    <style name="Widget.DNerve.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <!-- Card View -->
    <style name="Widget.DNerve.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
    
    <!-- Bottom Navigation -->
    <style name="Widget.DNerve.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- FAB -->
    <style name="Widget.DNerve.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@android:color/white</item>
    </style>
    
    <!-- Extended FAB -->
    <style name="Widget.DNerve.ExtendedFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>
    
    <!-- Extended FAB - Active Trip (Red) -->
    <style name="Widget.DNerve.ExtendedFAB.Stop" parent="Widget.DNerve.ExtendedFAB">
        <item name="backgroundTint">@color/error</item>
    </style>
    
    <!-- ==================== TEXT STYLES ==================== -->
    
    <style name="TextAppearance.DNerve.H1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.DNerve.H2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.DNerve.H3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.DNerve.H4" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.DNerve.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body1</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.DNerve.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_body2</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.DNerve.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.DNerve.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">@dimen/text_overline</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Points Display -->
    <style name="TextAppearance.DNerve.Points" parent="TextAppearance.DNerve.H1">
        <item name="android:textSize">@dimen/points_text_size</item>
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <!-- Timer Display -->
    <style name="TextAppearance.DNerve.Timer" parent="TextAppearance.DNerve.H2">
        <item name="android:textSize">@dimen/trip_timer_size</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Tier Labels -->
    <style name="TextAppearance.DNerve.Tier.Bronze" parent="TextAppearance.DNerve.Body2">
        <item name="android:textColor">@color/tier_bronze</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.DNerve.Tier.Silver" parent="TextAppearance.DNerve.Body2">
        <item name="android:textColor">@color/tier_silver</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.DNerve.Tier.Gold" parent="TextAppearance.DNerve.Body2">
        <item name="android:textColor">@color/tier_gold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.DNerve.Tier.Platinum" parent="TextAppearance.DNerve.Body2">
        <item name="android:textColor">@color/tier_platinum</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
